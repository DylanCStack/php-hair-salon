<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title></title>
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link href="/css/styles.css" rel="stylesheet" type="text/css">

    </head>
    <body>
        <div class="container">
            <h1>Generic<span class="tm">tm</span> Hair Salon</h1>
            <h3>Stylist: {{stylist.getName}}</h3>
            {% if clients is not empty %}
            <ul>
                {% for client in clients %}
                    <li><span class="client-name">{{client.getName}}</span>
                        <form action = "/{{stylist.getName}}/client/{{client.getName}}/edit">
                            <button type="submit" value="{{client.getId}}" class="btn btn-warning">Edit</button>
                        </form>
                        <form action="/{{stylist.getName}}/delete-client/{{client.getId}}" method="post">
                            <input name="_method" type="hidden" value="delete">
                            <button type="submit" value="{{client.getId}}" class="btn btn-danger">Delete</button>
                        </form>
                    </li>
                {% endfor %}
            </ul>
            {% endif %}

            {% if clients is not empty %}
            <form action="/{{stylist.getName}}/clients" method="post">
                <input name="_method" type="hidden" value="delete">

                <button type="submit" class= "btn btn-danger">Delete all of {{stylist.getName}}'s clients.</button>
            </form>
            {% endif %}

            <form action="/{{stylist.getName}}/clients" method="post">
                <h4>Add a new client</h4>
                <label for="client-name">Name:</label>
                <input class="form-control" type="text" name="client-name" placeholder="Enter the new client name">

                <button type="submit" class="btn btn-info">Add</button>
            </form>
            <a href="/" class="btn btn-success">Home</a>
        </div>
    </body>
</html>
